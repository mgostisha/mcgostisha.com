---
import Link from '../Link.astro';

export interface Props {
    author: string;
    title: string;
    url: string;
}

const {author, title, url } = Astro.props;
---
<section class="reads-article">
  <div class="reads-article-link">
    <Link to={url} external>{title}</Link> by {author}
  </div>
  <slot />
</section>

<style>
  .reads-article-link {
    margin-block-end: 0.5rem;
    font-size: var(--font-size-large);
  }
</style>